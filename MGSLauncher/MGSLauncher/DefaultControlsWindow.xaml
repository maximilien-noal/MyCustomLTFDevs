<Window
    x:Class="MGSLauncher.DefaultControlsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MGSLauncher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="DefaultControlsView"
    Title="Contrôles par défaut"
    Width="300"
    Height="300"
    MinWidth="640"
    MinHeight="480"
    ResizeMode="NoResize"
    TextBlock.FontSize="17"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Image Source="Background.png" Stretch="UniformToFill" />
        <TabControl Background="Black">
            <TabItem Header="Clavier">
                <Grid TextBlock.Foreground="White" TextElement.Foreground="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="4 / 6 / 8 / 2 (pavé numérique) : " />
                        <TextBlock Text="Shift :" />
                        <TextBlock Text="X :" />
                        <TextBlock Text="Tab :" />
                        <TextBlock Text="Échap :" />
                        <TextBlock Text="A :" />
                        <TextBlock Text="S :" />
                        <TextBlock Text="Espace :" />
                        <TextBlock Text="Ctrl :" />
                        <TextBlock Text="Q :" />
                        <TextBlock Text="W :" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock Text="Se déplacer" />
                        <TextBlock Text="Ramper" />
                        <TextBlock Text="Vue subjective" />
                        <TextBlock Text="Codec" />
                        <TextBlock Text="Menu / Pause / Passer outre la cinématique" />
                        <TextBlock Text="Inventaire objets" />
                        <TextBlock Text="Inventaire armes" />
                        <TextBlock Text="Attaque au corps à corps" />
                        <TextBlock Text="Tirer avec l'arme / Prise au corps à corps" />
                        <TextBlock Text="Utiliser ou arrêt d'utiliser l'objet sélectionné" />
                        <TextBlock Text="Sortir ou ranger l'arme sélectionnée" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Manette">
                <Grid TextBlock.Foreground="White" TextElement.Foreground="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Orientation="Vertical">
                        <TextBlock Text="Exemple avec une manette Xbox 360 :" />
                        <Rectangle Height="2" Fill="Black" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10,10,0,0"
                        Orientation="Vertical">
                        <TextBlock Text="Pad directionnel : " />
                        <TextBlock Text="Appui sur pad directionnel :" />
                        <TextBlock Text="Appui sur pad secondaire :" />
                        <TextBlock Text="Back :" />
                        <TextBlock Text="Start :" />
                        <TextBlock Text="LB :" />
                        <TextBlock Text="RB :" />
                        <TextBlock Text="A :" />
                        <TextBlock Text="B :" />
                        <TextBlock Text="X :" />
                        <TextBlock Text="Y :" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,10,0,0"
                        Orientation="Vertical">
                        <TextBlock Text="Se déplacer" />
                        <TextBlock Text="Ramper" />
                        <TextBlock Text="Vue subjective" />
                        <TextBlock Text="Codec" />
                        <TextBlock Text="Menu / Pause / Passer outre la cinématique" />
                        <TextBlock Text="Inventaire objets" />
                        <TextBlock Text="Inventaire armes" />
                        <TextBlock Text="Attaque au corps à corps" />
                        <TextBlock Text="Tirer avec l'arme / Prise au corps à corps" />
                        <TextBlock Text="Utiliser ou arrêt d'utiliser l'objet sélectionné" />
                        <TextBlock Text="Sortir ou ranger l'arme sélectionnée" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>